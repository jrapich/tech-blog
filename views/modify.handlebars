<section class="container-fluid">
    <section class="col justify-content-start post-section">
        <section class="row">
            <div class="col-10 text-center" style="padding-bottom: 40px;">
                Welcome, {{user}}! Type in your new content for this post:
            </div>
        </section>
        <section class="row justify-content-center">
        <div class="col-2"></div>
        <div class="col-6">
            <div style="padding: 10px;"></div>
            <form class="form-floating">
                <input type="text" class="form-control" id="floatingInputContent">
                <label for="floatingInputContent">Enter post content here</label>
            </form>
            <div style="padding: 10px;"></div>
            <button type="button" class="btn btn-outline-success col-2" id="submitPost">Submit</button>
        </div>
        <div class="col-4"></div>
    </section>
    <script src="/js/submit.js"></script> 
    </section>
</section>