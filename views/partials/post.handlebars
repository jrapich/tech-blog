<section class="row postrow" id="{{id}}">
    <div class="col-2">
        <img 
        src="/images/notebook-icon-png-20.jpg"
        class="post-thumbnail">
    </div>
    <div class="col-2">
        {{post_title}}
    </div>
    <div class="col-4">
        {{user.username}}
    </div>
    <div class="col">
        {{created_on}}
    </div>
    <div class="col-2 container align-items-center">
        <img class="edit-button" src="/images/modify-icon-2.jpg">
        <span style="padding-right: 10xp;"></span>
        <img class="delete-button" src="/images/remove-icon-12.jpg" >
    </div>
</section>